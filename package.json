{
  "name": "angular-ui-monorepo",
  "version": "0.0.0",
  "description": "Angular UI component library monorepo with showcase application",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run build:lib:watch\" \"ng serve showcase\"",
    "start:showcase": "ng serve showcase",
    "build": "ng build showcase",
    "build:showcase": "ng build showcase",
    "build:gh-pages": "ng build showcase --configuration=production --base-href=/",
    "watch": "ng build showcase --watch --configuration development",
    "build:lib": "ng build angular-ui",
    "build:lib:watch": "ng build angular-ui --watch",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "npx prettier --write 'apps/showcase/src/**/*.{ts,html,scss,json}' 'packages/angular-ui/src/**/*.{ts,html,scss,json}'",
    "format:check": "npx prettier --check 'apps/showcase/src/**/*.{ts,html,scss,json}' 'packages/angular-ui/src/**/*.{ts,html,scss,json}'",
    "test:coverage": "ng test --code-coverage --watch=false --browsers=ChromeHeadless --source-map",
    "precommit": "npm run lint && npm run format:check",
    "e2e": "npx playwright test -c e2e/playwright.config.ts",
    "e2e:ui": "npx playwright test -c e2e/playwright.config.ts --ui",
    "e2e:debug": "npx playwright test -c e2e/playwright.config.ts --debug",
    "e2e:report": "npx playwright show-report e2e/test-results",
    "publish:lib": "cd dist/angular-ui && npm publish",
    "publish:lib:patch": "cd packages/angular-ui && npm version patch && cd ../.. && npm run build:lib && npm run publish:lib",
    "publish:lib:minor": "cd packages/angular-ui && npm version minor && cd ../.. && npm run build:lib && npm run publish:lib",
    "publish:lib:major": "cd packages/angular-ui && npm version major && cd ../.. && npm run build:lib && npm run publish:lib"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.0",
    "@angular/cdk": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@fluentui/svg-icons": "^1.1.313",
    "@milkdown/crepe": "^7.17.2",
    "@milkdown/kit": "^7.17.2",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "dompurify": "^3.3.0",
    "marked": "^17.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular-eslint/eslint-plugin": "21.1.0",
    "@angular-eslint/eslint-plugin-template": "21.1.0",
    "@angular-eslint/schematics": "21.1.0",
    "@angular-eslint/template-parser": "21.1.0",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.0.0",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "@typescript-eslint/parser": "8.51.0",
    "angular-eslint": "^21.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "jasmine-core": "~5.6.0",
    "jsdom": "^27.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.9.3",
    "vitest": "^4.0.8",
    "wait-on": "^8.0.3"
  }
}
